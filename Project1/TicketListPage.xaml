<Page
    x:Class="Project1.TicketListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Project1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TicketListPage"
    d:DesignHeight="800"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />

        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel>

                <ListBox ItemsSource="{Binding TicketList}" SelectedItem="{Binding SelectedTicket}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="40" Text="{Binding ItemId}" />
                                <TextBlock FontSize="40" Text="{Binding Title}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                
                
            </StackPanel>

        </StackPanel>
        <StackPanel
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
  
            <DatePicker
                Name="datePicker1"
                IsDropDownOpen="True"
                SelectedDate="{Binding InputDate}"
                SelectedDateFormat="Short" />
            <Label>Откуда</Label>
            <ListBox
                Height="100"
                ItemsSource="{Binding CountryList}"
                SelectedItem="{Binding SelectedCountryFrom}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="40" Text="{Binding ItemId}" />
                            <TextBlock FontSize="40" Text="{Binding Title}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Label>Куда</Label>
            <ListBox
                Height="100"
                ItemsSource="{Binding CountryList}"
                SelectedItem="{Binding SelectedCountryWhere}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="40" Text="{Binding ItemId}" />
                            <TextBlock FontSize="40" Text="{Binding Title}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBox
                x:Name="Input"
                Margin="10"
                Background="LightGray"
                FontSize="30"
                Text="{Binding Input}" />
            <TextBlock
                x:Name="SelectedFilmTitle"
                Margin="10"
                Background="LightGreen"
                FontSize="30"
                Text="{Binding Path=SelectedTicket.Title}" />
            <Button
                x:Name="Add"
                Width="300"
                Height="50"
                Margin="10,10,10,0"
                Background="Coral"
                BorderBrush="Transparent"
                Command="{Binding AddCommand}"
                Content="Добавить"
                FontSize="30" />
            <Button
                x:Name="Delete"
                Width="300"
                Height="50"
                Margin="10,10,10,0"
                Background="Blue"
                BorderBrush="Transparent"
                Command="{Binding DeleteCommand}"
                Content="Удалить"
                FontSize="30" />
            <Button
                x:Name="Edit"
                Width="300"
                Height="50"
                Margin="10"
                Background="Green"
                BorderBrush="Transparent"
                Command="{Binding EditCommand}"
                Content="Изменить"
                FontSize="30" />
            
            
            
        </StackPanel>
    </Grid>
</Page>
