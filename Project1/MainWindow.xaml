<Window x:Class="Project1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
            <Button 
         Margin="10 10 10 0"
         Height="70"
         Width="220"
         Content="Список стран"
         Background="LightCoral"
         FontSize="30"
         BorderBrush="Transparent"
         x:Name="CountryListPage"
         Click="CountryListPage_Click"
         />
            <Button 
         Margin="10 10 10 0"
         Height="70"
         Width="220"
         Content="Бронирование"
         Background="#a4e2cf"
         FontSize="30"
         BorderBrush="Transparent"
         x:Name="TicketListPage"
         Click="BokingPage_Click"
         />
           
        </StackPanel>
        <Frame x:Name="Main"
            Margin="0,80,0,0"
            NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
